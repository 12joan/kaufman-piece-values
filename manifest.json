{
  "version": "1.0.0",
  "manifest_version": 3,
  "name": "Kaufman piece values for Chess.com",
  "description": "Use Larry Kaufman's system for calculating piece values on Chess.com",
  "icons": {
    "128": "icon-128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{45bf3107-fff8-4b3c-9ecd-bffad44f89cd}"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.chess.com/*"
      ],
      "js": [
        "src/main.ts"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "icon-128.png",
        "icon-32.png"
      ],
      "matches": []
    }
  ]
}
